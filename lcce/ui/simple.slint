import { Button, VerticalBox, HorizontalBox, GroupBox, TabWidget, ScrollView, Text } from "std-widgets.slint";

// Simple card component
component SimpleCard inherits Rectangle {
    in property <string> title;
    in property <string> description;
    in property <string> icon;
    callback clicked;
    
    border-radius: 8px;
    background: #f8f9fa;
    border-width: 2px;
    border-color: #007bff;
    
    TouchArea {
        clicked => { root.clicked(); }
    }
    
    VerticalBox {
        padding: 16px;
        
        Text {
            text: icon;
            font-size: 24px;
            horizontal-alignment: center;
        }
        
        Text {
            text: title;
            font-size: 16px;
            font-weight: 700;
            horizontal-alignment: center;
        }
        
        Text {
            text: description;
            font-size: 12px;
            horizontal-alignment: center;
            wrap: word-wrap;
        }
    }
}

